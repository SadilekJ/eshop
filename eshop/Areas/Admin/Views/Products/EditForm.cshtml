@using eshop.Areas.Admin.Controllers;
@model Product

@{ if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
        <div class="row">
            <form asp-action="@ViewBag.Action" enctype="multipart/form-data" method="post">
                <div class="form-group col-sm-4">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @{if (@ViewBag.Action == nameof(ProductsController.Edit))
                            {
                                <input type="hidden" asp-for="@Model.ID" class="form-control">
                            }
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Enter name of product">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Price"></label>
                        <textarea asp-for="@Model.Price" class="form-control" placeholder="Enter price of product"></textarea>
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Category"></label>
                        <select asp-for="@Model.Category">
                            <option value="Akční">Akční</option>
                            <option value="RPG">RPG</option>
                            <option value="Závodní">Závodní</option>
                            <option value="Sportovní">Sportovní</option>
                            <option value="Strategické">Strategické</option>
                            <option value="Dobrodružné">Dobrodružné</option>
                        </select>
                        @*<textarea asp-for="@Model.Category" class="form-control" placeholder="Enter category of product"></textarea>*@
                        <span asp-validation-for="@Model.Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Image"></label>
                        <input id="fileupload" asp-for="@Model.Image" accept="image/*" class="form-inline">
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                        <input type="hidden" value="/" asp-for="@Model.ImageSrc" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ImageAlt"></label>
                        <input asp-for="@Model.ImageAlt" class="form-control" placeholder="Enter ImageAlt">
                        <span asp-validation-for="@Model.ImageAlt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfProduct"></label>
                        <input asp-for="@Model.DetailOfProduct" class="form-control" placeholder="Enter detail of product">
                        <span asp-validation-for="@Model.DetailOfProduct" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    }
    else
    {
        <h2>Form action is not set!</h2>
    }
}

