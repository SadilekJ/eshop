@model RegisterViewModel

@{ ViewData["Title"] = "Register"; }

<link rel="stylesheet" href="~/css/LoginPageStyleSheet.css" />

<body>
    <div class="container">
        <div id="wrapper">
            <form asp-action="Register" method="post">
                <fieldset>
                    <legend>Register Form</legend>
                    <div class="form-group-lg">
                        <input class="form-control" asp-for="@Model.UserName" type="text" placeholder="User Name" />
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group-lg">
                        <input class="form-control" asp-for="@Model.FirstName" type="text" placeholder="First Name" />
                    </div>
                    <div class="form-group-lg">
                        <input class="form-control" asp-for="@Model.FirstName" type="text" placeholder="Last Name" />
                    </div>
                    <div>
                        <input class="form-control" asp-for="@Model.Email" type="text" placeholder="Email" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <input class="form-control" asp-for="@Model.PhoneNumber" type="text" placeholder="Phone number" />
                    </div>
                    <div class="form-group-lg">
                        <input class="form-control" asp-for="@Model.Password" type="password" placeholder="Password" />
                        <span asp-validation-for="@Model.Password" type="text" class="text-danger"></span>
                    </div>
                    <div class="form-group-lg">
                        <input class="form-control" asp-for="@Model.RepeatedPassword" type="password" placeholder="Repeat Password" />
                        <span asp-validation-for="@Model.RepeatedPassword" type="text" class="text-danger"></span>
                    </div>
                    <button class="btn" type="submit">Sign up</button>
                </fieldset>
            </form>
        </div>
    </div>
</body>


@section Scripts {
    <script src="~/js/Scripts.js"></script>
    <script src="~/js/Validation/UniqueCharactersValidation.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

